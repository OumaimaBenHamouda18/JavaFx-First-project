<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="324.0" prefWidth="425.0" styleClass="vbox" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyecto_fase5_omaima_benhamouda.JuegoAdivinanzaInitController">
   <HBox alignment="CENTER" styleClass="hbox" stylesheets="@style.css">
      <children>
          <Label fx:id="descripcionJuego" styleClass="descripcion_juego" stylesheets="@style.css" />
          <ImageView fx:id="jugador" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" smooth="true" />
      </children>
   </HBox>
   <VBox alignment="CENTER" styleClass="vbox" stylesheets="@style.css">
      <children>
          <TextField fx:id="nombreJugador" focusTraversable="false" prefHeight="25.0" promptText="Nombre" styleClass="textfield" stylesheets="@style.css" />
          <Label fx:id="errorNombre" styleClass="error" stylesheets="@style.css" />
          <TextField fx:id="edadJugador" focusTraversable="false" prefHeight="25.0" promptText="Edad" styleClass="textfield" stylesheets="@style.css" />
          <Label fx:id="errorEdad" styleClass="error" stylesheets="@style.css" />
      </children>
   </VBox>
    <HBox alignment="CENTER" styleClass="hbox" stylesheets="@style.css">
        <children>

            <Button fx:id="flechaBtn" onAction="#onFlechaClick" styleClass="flechaVolver" stylesheets="@style.css">

            </Button>
            <Button fx:id="startJuego" onAction="#onStartButtonClick" styleClass="botones" stylesheets="@style.css" text="Start" textFill="WHITE" />
        </children>
    </HBox>
</VBox>
