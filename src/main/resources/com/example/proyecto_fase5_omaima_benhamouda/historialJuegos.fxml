<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="vbox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyecto_fase5_omaima_benhamouda.HistorialJuegosController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Historial Juegos" textFill="WHITE">
      <font>
         <Font name="Candara Bold" size="42.0" />
      </font></Label>

    <TableView fx:id="historialTableView">
        <columns>
            <TableColumn fx:id="nombreJuego" text="Nombre Juego" />

            <TableColumn fx:id="nombreJugador" text="Nombre Jugador" />

            <TableColumn fx:id="score" text="Score" />

        </columns>

    </TableView>
    <HBox>
        <children>

            <Button fx:id="flechaBtn" onAction="#onFlechaClick" styleClass="flechaVolver" stylesheets="@style.css">
            </Button>
        </children>
    </HBox>
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
</VBox>
