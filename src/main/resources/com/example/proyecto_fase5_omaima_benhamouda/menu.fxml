        <Button fx:id="historialJuegosBtn" lineSpacing="3.0" onAction="#onHistorialJuegosButtonClick" prefHeight="26.0" prefWidth="476.0" styleClass="menuOption" stylesheets="@style.css" text="Historial Juegos" textFill="WHITE" textOverrun="LEADING_WORD_ELLIPSIS">
